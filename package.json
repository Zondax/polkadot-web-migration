{
  "name": "polkadot-migration",
  "version": "0.0.1",
  "private": true,
  "description": "Polkadot Migration",
  "keywords": [
    "zondax",
    "polkadot"
  ],
  "license": "Apache-2.0",
  "author": "Zondax AG <hello@zondax.ch>",
  "scripts": {
    "build": "next build",
    "build:docker": "docker build -t polkadot-migration .",
    "check": "biome check --write --unsafe .",
    "deps:update": "pnpm exec npm-check-updates -u -t semver && pnpm install",
    "dev": "NEXT_PUBLIC_NODE_ENV=development NEXT_PUBLIC_NATIVE_TRANSFER_AMOUNT=100 next dev --turbo",
    "dev:full-amount": "NEXT_PUBLIC_NODE_ENV=development next dev",
    "env:init": "cp .env.backup .env",
    "format": "biome format --write . && sort-package-json",
    "format:check": "biome format . && sort-package-json -c",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write --unsafe .",
    "prepare-pr": "pnpm install && pnpm exec playwright install && pnpm format && pnpm lint:fix && pnpm build && pnpm test && pnpm test:e2e",
    "start": "next start",
    "start:docker": "PORT=${PORT:-3000} && docker run --rm -p $PORT:3000 polkadot-migration",
    "test": "vitest run --coverage",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test e2e",
    "test:e2e:debug": "playwright test e2e --debug",
    "test:e2e:install": "playwright install",
    "test:e2e:report": "playwright show-report",
    "test:e2e:sharding": "playwright test e2e -x --reporter=list --output=playwright-report --shard=$PLAYWRIGHT_SHARD",
    "test:e2e:ui": "playwright test e2e --ui",
    "test:patterns": "./tests/lint-test-patterns.sh",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@ledgerhq/errors": "^6.23.0",
    "@ledgerhq/hw-transport": "^6.31.10",
    "@ledgerhq/hw-transport-mocker": "^6.29.8",
    "@ledgerhq/hw-transport-webhid": "^6.30.8",
    "@ledgerhq/types-live": "^6.86.0",
    "@legendapp/state": "^3.0.0-beta.31",
    "@polkadot-api/merkleize-metadata": "^1.1.25",
    "@polkadot/api": "^16.4.3",
    "@polkadot/api-derive": "^16.4.3",
    "@polkadot/keyring": "^13.5.4",
    "@polkadot/types": "^16.4.3",
    "@polkadot/types-augment": "^16.4.3",
    "@polkadot/types-codec": "^16.4.3",
    "@polkadot/util": "^13.5.4",
    "@polkadot/util-crypto": "^13.5.4",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-hover-card": "^1.1.14",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.14",
    "@radix-ui/react-toggle-group": "^1.1.10",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/postcss": "^4.1.11",
    "@vercel/analytics": "^1.5.0",
    "@zondax/ledger-js": "^1.3.0",
    "@zondax/ledger-substrate": "^1.1.2",
    "axios": "^1.12.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.22",
    "html-react-parser": "^5.2.6",
    "isomorphic-dompurify": "^2.26.0",
    "jsdom": "^26.1.0",
    "lucide-react": "^0.545.0",
    "next": "15.4.7",
    "next-themes": "^0.4.6",
    "postcss": "^8.5.6",
    "prop-types": "^15.8.1",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-hook-form": "^7.65.0",
    "server-only": "^0.0.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.14",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^13.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.4",
